resposta = input("Seu animal pertence a categoria MAMÍFEROS [Y] ou [N] : ")

#Como colocar para todo diferente <> de Y ou N
#Qual a diferença de "A" or 'a'

if resposta == "Y" or resposta == "y":
        resposta = input("Seu animal é QUADRÚPEDE? [Y] ou [N] : ")
        if resposta == "Y" or resposta == "y":
                resposta = input("Seu animal é CARNÍVORO? [Y] ou [N] : ")
                if resposta == "Y" or resposta == "y":
                        print("Seu animal é um LEÃO.")
                elif resposta == "N" or resposta == "n":
                        resposta = input("Seu animal é HERBÍVORO? [Y] ou [N] : ")
                        if resposta == "Y" or resposta == "y":
                                print("Seu animal é um CAVALO.")
                        elif resposta == "N" or resposta == "n":
                                print("Animal INVÁLIDO, vamos tentar dinovo: \n")


        if resposta == "N" or resposta == "n":
